
<!--index.wxml-->
<view class="container">
  <view class="container-out">
    <view class="circle" wx:for="{{circleList}}" style="top:{{item.topCircle}}rpx;left:{{item.leftCircle}}rpx;background-color: {{(index%2==0)?colorCircleFirst:colorCircleSecond}};">
    </view>
    <view class="container-in">
      <view class="content-out" wx:for="{{awardList}}" style="top:{{item.topAward}}rpx;left:{{item.leftAward}}rpx;background-color: {{(index==indexSelect)?colorAwardSelect:colorAwardDefault}};">
        <image class="award-image" src="{{item.imageAward}}"></image>
      </view>
      <view class="start-btn" bindtap="startGame" style=" background-color:{{isRunning?'#e7930a':'#ffe400'}}">START</view>
    </view>

  </view>
   <view  style="flex-direction:column;">
  
      <view class="page-head-title">历史</view>
           <picker class='time-picker' mode="multiSelector" bindchange="bindStartMultiPickerChange" bindtap='pickerTap'           bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">{{startDate}}
           </picker>
      <view class="text-box" scroll-y="true" scroll-top="{{scrollTop}}">
        <text class="page-head-content" >{{historyFood}}</text>
      </view>
  

      <!-- <button class='tongbu' >查看历史</button> -->
      <!-- <button  class='tongbu' open-type="getUserInfo" bindgetuserinfo="getUserInfo">获取用户信息</button> -->
    </view>
</view>