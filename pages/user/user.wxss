/* pages/my/my.wxss */

.personal_info {
    padding: 20px 0;
    background-color: #fff;
    position: relative;
}

.photo_wrap {
    width: 180rpx;
    height: 180rpx;
    position: relative;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    border-radius: 86rpx;
}

.photo_wrap:after {
    position: absolute;
    content: '';
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    box-shadow: 0 0 10rpx 10rpx #fff inset;
    border-radius: 86rpx;
}

.photo_wrap image {
    width: 180rpx;
    height: 180rpx;
    border-radius: 90rpx;
}

.photo_wrap button {
    width: 180rpx;
    height: 180rpx;
    position: absolute;
    top: 0;
    z-index: 1;
    opacity: 0.01;
}

.nickname {
    text-align: center;
    color: #696969;
}

.wode_item_wrap {
    background-color: #fff;
    margin-top: 10px;
    font-size: 14px;
}

.wode_item {
    font-size: 14px;
    height: 45px;
    line-height: 45px;
    border-top: 1px solid #e5e5e5;
    position: relative;
}

.wode_item button{
    width: 100%;
    background: #ffffff;
    padding-left: 10px;
    text-align: left;
    border-bottom: 1px solid #e5e5e5;
}

.wode_item image {
    width: 20px;
    height: 20px;
    position: absolute;
    top: 12px;
    right: 20px;
}

.feedback {
    width: 80%;
    position: absolute;
    bottom: 30%;
    left: 0;
    right: 0;
    margin: 0 auto;
    height: 600rpx;
    border: 1px solid #e5e5e5;
    border-radius: 10rpx;
    background: #fff;
    z-index: 99;
}

.feedback text {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-weight: bold;
    font-size: 35rpx;
    margin-bottom: 30rpx;
    display: block;
    text-align: center;
    border-bottom: 1px solid #e5e5e5;
}

.feedback textarea {
    width: 90%;
    margin: 0 auto;
    padding: 10rpx;
    border-radius: 10rpx;
    border: 1px solid #e5e5e5;
}

.feedback view {
    width: 100%;
    height: 80rpx;
    margin-top: 30rpx;
    display: flex;
    flex-direction: row;
}

.feedback view .left {
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #198f1f;
    color: #fff;
    border-radius: 40rpx;
}

.feedback view .right {
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    border: #e5e5e5;
}

.mask {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    background: #000;
    opacity: 0.5;
    z-index: 98;
}

button::after{
    border: 0;
}